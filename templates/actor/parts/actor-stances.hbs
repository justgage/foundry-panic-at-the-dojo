<ol class="items-list">
  <li class="item grid-span-1 flexrow items-header">
    <div class="item-name">{{localize "Name"}}</div>
    <div class="item-controls">
      <a class="item-control item-create" title="Create Form" data-type="form">
        <i class="fas fa-plus"></i>
        {{localize "DOCUMENT.New" type="form"}}
      </a>
    </div>
  </li>
  <li class="item grid-span-1 flexrow items-header">
    <div class="item-name">{{localize "Name"}}</div>
    <div class="item-controls">
      <a class="item-control item-create" title="Create Style" data-type="style">
        <i class="fas fa-plus"></i>
        {{localize "DOCUMENT.New" type="style"}}
      </a>
    </div>
  </li>

  {{#each stances as |stance id|}}
    <div class="stance">
      {{#if (and stance.form stance.style) }}
        <h2 class="stance-title">
          <input type="radio" class="stance-select" name="stance" id="stance-{{id}}" value="{{id}}" />
          <label class="stance-label" for="stance-{{id}}">{{stance.style.name}} {{stance.form.name}}
            <span class="range">(Range: {{stance.style.system.range}})</span>
          </label>

          <div class="dice">
            {{#each stance.form.system.actionDice as |dice|}}
              <span class="text-xl">ANY_ON_{{dice}}</span>
            {{/each}}
          </div>
        </h2>
      {{else}}
        <h2>
          Both Form and Style you must have to create a Stance.
        </h2>
      {{/if}}

      <section class="grid-span-1">
        <li class='item flexrow' data-item-id='{{stance.style._id}}'>
          {{#if stance.style}}
            {{#if ../editable}}
              <div class='item-name'>
                <div class='item-image'>
                  <a class='rollable' data-roll-type='item'>
                    <img src='{{stance.style.img}}' title='{{stance.style.name}}' width='24' height='24' />
                  </a>
                </div>
                <h4 class="style-title">{{stance.style.name}} Style</h4>
                <div>Range: {{stance.style.system.range}}</div>
              </div>
              <div class='item-controls'>
                <a class='item-control item-edit' title='{{localize "DOCUMENT.Edit" type=' style'}}'>
                  <i class='fas fa-edit'></i>
                </a>
                <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=' style'}}'>
                  <i class='fas fa-trash'></i>
                </a>
              </div>
            {{else}}
              <div class="">
                <div>{{{stance.style.system.description}}}</div>
              </div>
            {{/if}}
          {{else}}
            <span>Please drag a Style onto the page!</span>
          {{/if}}
        </li>
      </section>

      <section class=" grid-span-1">
        <li class="item flexrow" data-item-id="{{stance.form._id}}">
          {{#if stance.form}}
            {{#if ../editable}}

              <div class="item-name">
                <div class="item-image">
                  <a class="rollable" data-roll-type="item">
                    <img src="{{stance.form.img}}" title="{{stance.form.name}}" width="24" height="24" />
                  </a>
                </div>
                <h4 class="form-title">{{stance.form.name}} Form</h4>
                <div class="dice">
                  {{#each stance.form.system.actionDice as |dice|}}
                    <span class="text-xl">{{dice}}</span>
                  {{/each}}
                </div>
              </div>
              <div class="item-controls">
                <a class="item-control item-edit" title="{{localize 'DOCUMENT.Edit' type=" form"}}">
                  <i class="fas fa-edit"></i>
                </a>
                <a class="item-control item-delete" title="{{localize 'DOCUMENT.Delete' type=" form"}}">
                  <i class="fas fa-trash"></i>
                </a>
              </div>

            {{else}}
              <div class="">
                <div>{{{stance.form.system.abilityDescription}}}</div>
              </div>
            {{/if}}
          {{else}}
            <span>Please drag a form onto the page!</span>
          {{/if}}
        </li>
      </section>
    </div>

  {{/each}}
</ol>